<Page x:Class="Food_Recipe_Appplication.AddRecipePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Food_Recipe_Appplication"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddRecipePage">
	<DockPanel>
		<StackPanel DockPanel.Dock="Left"  Name="LeftMenu" Background="#00B4AB" Width="170">

			<Button Style="{DynamicResource MenuButtonStyle}"  Name="LeftMenuButton" Click="LeftMenuButton_Click">
				<StackPanel Orientation="Horizontal">
					<Image Height="20" Source="Icons/menu.png" Margin="10 0 10 0"></Image>
					<TextBlock FontSize="18">Menu</TextBlock>
				</StackPanel>
			</Button>
			<Button Name="HomeButton" Click="HomeButton_Click"  Style="{DynamicResource MenuButtonStyle}">
				<StackPanel Orientation="Horizontal">
					<Image Height="20" Source="Icons/home-page.png" Margin="10 0 10 0"></Image>
					<TextBlock FontSize="18">Home</TextBlock>
				</StackPanel>
			</Button>
			<Button Name="FavouriteButton" Click="FavouriteButton_Click" Style="{DynamicResource MenuButtonStyle}">
				<StackPanel Orientation="Horizontal">
					<Image Height="20" Source="Icons/favourite.png" Margin="10 0 10 0"></Image>
					<TextBlock FontSize="18">Favourite</TextBlock>
				</StackPanel>
			</Button>
			<Button  Style="{DynamicResource MenuButtonStyle}">
				<StackPanel Orientation="Horizontal">
					<Image Height="20" Source="Icons/add-file.png" Margin="10 0 10 0"></Image>
					<TextBlock FontSize="18">Add recpie</TextBlock>
				</StackPanel>
			</Button>
			<Button Name="SettingButton" Click="SettingButton_Click" Style="{DynamicResource MenuButtonStyle}">
				<StackPanel Orientation="Horizontal">
					<Image Height="20" Source="Icons/settings.png" Margin="10 0 10 0"></Image>
					<TextBlock FontSize="18">Settings</TextBlock>
				</StackPanel>
			</Button>
		</StackPanel>
		<StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#99D9F3" Height="50">
			<Button  Style="{DynamicResource MenuButtonStyle}" Name="MenuButton" Click="MenuButton_Click" Visibility="Collapsed">
				<StackPanel Orientation="Horizontal">
					<Image Height="20" Source="Icons/menu.png" Margin="10 0 10 0"></Image>
					<TextBlock FontSize="18">Menu</TextBlock>
				</StackPanel>
			</Button >
			<StackPanel Name="SearchBlock"  Orientation="Horizontal" FlowDirection="RightToLeft">
				<Image  Height="25" Source="Icons/loupe.png"></Image>
				<TextBox Name="SearchBox"  BorderThickness="2" BorderBrush="Black" Width="250" Height="25" Margin="10 0 0 0" FlowDirection="LeftToRight" FontSize="16" GotFocus="SearchBox_GotFocus" LostFocus="SearchBox_LostFocus" Foreground="Gray">Search</TextBox>
			</StackPanel>
		</StackPanel>


		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*" />
				<ColumnDefinition Width="1*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="0.25*" />
				<RowDefinition Height="2*" />
				<RowDefinition Height="1*" />
			</Grid.RowDefinitions>
			<TextBox Name="AddNameRecipeBox"  BorderThickness="2" BorderBrush="Black" FlowDirection="LeftToRight" FontSize="16" GotFocus="AddNameRecipeBox_GotFocus" LostFocus="AddNameRecipeBox_LostFocus" Foreground="Gray">Nhập tên công thức</TextBox>
			<StackPanel Grid.Column="1" Orientation="Horizontal">
				<Button x:Name="BrowseRecipeImageButton" Click="AddRecipeImage_Click">Browse</Button>
				<Image x:Name="BrowseRecipeImage"></Image>
			</StackPanel>
			<Image x:Name="RecipeImage" Grid.Row="1" ></Image>
			<TextBox Grid.Column="1" Grid.Row="1" Name="DescriptionBox"  BorderThickness="2" BorderBrush="Black" FlowDirection="LeftToRight" FontSize="16" GotFocus="DescriptionBox_GotFocus" LostFocus="DescriptionBox_LostFocus" Foreground="Gray">Viết công thức chỗ này</TextBox>
			<StackPanel Grid.Row="2">
				<Grid Height="130">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1*" />
						<ColumnDefinition Width="1*" />
					</Grid.ColumnDefinitions>
					<Button  Style="{DynamicResource MenuButtonStyle}" x:Name="AddImageButton" Click="AddImage_Click"  Width="80" Height="80" Margin="0,20,0,0">
						<StackPanel Orientation="Vertical">
							<Image Source="Icons/add-image.png" Width="48" Margin="20,0,0,0"/>
							<TextBlock Text="Add Image" Margin="15,0,0,0"/>
						</StackPanel>
					</Button>
					<Button Grid.Column="2" Grid.Row="2" Style="{DynamicResource MenuButtonStyle}" x:Name="SaveButton" Click="SaveButton_Click" Margin="0,20,0,0" Width="80" Height="80">
						<StackPanel Orientation="Vertical">
							<Image Source="Icons/checked.png" Width="48" Margin="15,0,0,0"/>
							<TextBlock Text="Save" Margin="25,5,0,0"/>
						</StackPanel>
					</Button>
				</Grid>
			</StackPanel>
			<StackPanel Grid.Column="2" Grid.Row="2">
				<Grid Height="129">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1*" />
						<ColumnDefinition Width="1*" />
						<ColumnDefinition Width="1*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="1*" />
					</Grid.RowDefinitions>
					<Button Grid.Row="2" Style="{DynamicResource MenuButtonStyle}" x:Name="LeftArrowButton" Click="LeftArrowButton_Click" Margin="0" Width="80" Height="80">
						<Image Source="Icons/left-arrow.png" Width="48" Margin="15,0,0,0"/>
					</Button>
					<Grid Grid.Column="1" Grid.Row="2">
						<Image x:Name="StepNumberImage" Source="Icons/circle-shape.png" Width="48" Margin="0,0,0,0"/>
						<TextBlock x:Name="StepNumber" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0">10</TextBlock>
					</Grid>
					<Button Grid.Column="2" Style="{DynamicResource MenuButtonStyle}" x:Name="RightArrowButton" Click="RightArrowButton_Click" Margin="0,0,0,0" Width="80" Height="80">
						<Image Source="Icons/right-arrow.png" Width="48" Margin="15,0,0,0"/>
					</Button>
				</Grid>
			</StackPanel>
		</Grid>

	</DockPanel>
	<Page.Resources>
		<Style x:Key="MenuButtonStyle" TargetType="{x:Type Button}">
			<Setter Property="Height" Value="50"></Setter>
			<Setter Property="Width" Value="170"></Setter>
			<Setter Property="HorizontalContentAlignment" Value="Left"></Setter>
			<Setter Property="Background" Value="Transparent"></Setter>
			<Setter Property="BorderBrush" Value="Transparent"></Setter>
			<Setter Property="BorderThickness" Value="0"></Setter>
		</Style>
        <Style TargetType="Image">
            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"></Setter>
        </Style>
    </Page.Resources>
</Page>
